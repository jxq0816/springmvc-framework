<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jxq.dao.UserDao">

	<!-- 根据登录名查询用户 -->
	<select id="query" resultType="String" parameterType="java.util.Map">
		SELECT
			login_name
		FROM sys_user a
		WHERE a.id = #{id}
	</select>

</mapper>